<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >

	<LinearLayout
		android:id="@+id/ll_order_parent"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:background="@color/white"
		android:orientation="vertical" >

		<View
			android:layout_width="fill_parent"
			android:layout_height="0.5dp"
			android:background="@color/divider" />

		<RelativeLayout
			android:id="@+id/rl_tv_commnet_seller"
			android:layout_width="match_parent"
			android:layout_height="45dp"
			android:background="@drawable/menu_option_bg"
			android:clickable="true"
			android:padding="5dp" >

			<TextView
				android:id="@+id/tv_sellr_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="5dp"
				android:layout_marginStart="5dp"
				android:drawableLeft="@drawable/ic_item"
				android:drawablePadding="2dp"
				android:drawableStart="@drawable/ic_item"
				android:text="@string/coupon"
				android:textColor="@color/tab_title_normal_color"
				android:textSize="@dimen/c_text_size" />

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:contentDescription="@null"
				android:src="@drawable/ic_detail_right" />
		</RelativeLayout>

		<View
			android:layout_width="fill_parent"
			android:layout_height="0.5dp"
			android:background="@color/divider" />

		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="5dp" >

			<RatingBar
				android:id="@+id/comment_ratingbar"
				style="@style/roomRatingBar"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_centerVertical="true"
				android:layout_marginLeft="5dp"
				android:layout_marginStart="5dp"
				android:clickable="false"
				android:isIndicator="true"
				android:numStars="5" >
			</RatingBar>

			<TextView
				android:id="@+id/tv_comment_time"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:textColor="@color/tab_title_normal_color"
				android:textSize="@dimen/c_text_size" />
		</RelativeLayout>

		<TextView
			android:id="@+id/tv_commnet_cotent"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:lineSpacingMultiplier="1.2"
			android:textColor="@color/black_text"
			android:textSize="@dimen/c_text_size" />

		<View
			android:layout_width="fill_parent"
			android:layout_height="0.5dp"
			android:layout_marginTop="15dp"
			android:background="@color/divider" />
	</LinearLayout>

</LinearLayout>