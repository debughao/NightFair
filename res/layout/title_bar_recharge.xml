<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="50dp"
	android:orientation="vertical" >

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="49dp"
		android:background="@color/action_write" >

		<TextView
			android:id="@+id/tv_recharge_back"
			style="@style/title_bar_text"
			android:layout_width="wrap_content"
			android:layout_height="49dp"
			android:layout_centerVertical="true"
			android:background="@drawable/actionbar_selector_gray"
			android:clickable="true"
			android:drawableLeft="@drawable/ic_detail_back"
			android:drawablePadding="4dp"
			android:drawableStart="@drawable/ic_detail_back"
			android:gravity="center_vertical"
			android:text="@string/text_title_bar_coupon"
			android:textColor="@color/black_text"
			android:textSize="@dimen/c_text_size" />

		<View
			android:layout_width="fill_parent"
			android:layout_height="1px"
			android:layout_below="@id/tv_recharge_back"
			android:background="@color/divider" />
	</RelativeLayout>

</LinearLayout>