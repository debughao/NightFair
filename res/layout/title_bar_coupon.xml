<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/white"
	android:orientation="vertical" >

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="49dp"
		android:background="@color/action_write" >

		<TextView
			android:id="@+id/tv_coupon_back"
			style="@style/title_bar_text"
			android:layout_width="wrap_content"
			android:layout_height="49dp"
			android:layout_centerVertical="true"
			android:background="@drawable/actionbar_selector_gray"
			android:clickable="true"
			android:drawableLeft="@drawable/ic_detail_back"
			android:drawablePadding="4dp"
			android:drawableStart="@drawable/ic_detail_back"
			android:gravity="center_vertical"
			android:text="@string/text_title_bar_coupon"
			android:textColor="@color/text_gray"
			android:textSize="@dimen/c_text_size" />

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true" >

			<ImageButton
				android:id="@+id/iv_title_bar_message"
				android:layout_width="50dp"
				android:layout_height="49dp"
				android:layout_gravity="center_vertical"
				android:background="@drawable/actionbar_selector_gray"
				android:clickable="true"
				android:contentDescription="@null"
				android:src="@drawable/ic_action_share" />

			<ToggleButton
				android:id="@+id/iv_title_bar_collect"
				android:layout_width="50dp"
				android:layout_height="49dp"
				android:layout_gravity="center_vertical"
				android:background="@null"
				android:button="@null"
				android:checked="false"
				android:drawableLeft="@drawable/selector_btn_collect"
				android:drawableStart="@drawable/selector_btn_collect"
				android:padding="15dip"
				android:text=""
				android:textOff=""
				android:textOn="" />
		</LinearLayout>
	</RelativeLayout>

	<View
		android:id="@+id/v_coupon_head"
		android:layout_width="fill_parent"
		android:layout_height="1px"
		android:background="@color/divider" />

</LinearLayout>