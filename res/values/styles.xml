<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowContentOverlay">@null</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="MyAppTheme" parent="android:Theme.Light">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- 加载样式 -->
    <style name="Theme.Light.LoadingDialog" parent="@style/BaseDialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="title_bar_text">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title</item>
    </style>
   <style name="title_bar_location">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">@dimen/a_text_size</item>
    </style>
    
    <style name="user_nickname_text">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">@dimen/a_text_size</item>
        <item name="android:drawableRight">@drawable/user_image_ringht</item>
    </style>

    <style name="baseStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="baseStyle1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="personal_item_image_right" parent="baseStyle">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="setting_item_right" parent="baseStyle">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textColor">@color/tab_title_normal_color</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="personal_item_image_left" parent="baseStyle">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="personal_item_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/menu_option_bg</item>
        <item name="android:clickable">true</item>
    </style>
       <style name="item_layout_notclick">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@color/white</item>
       
    </style>

    <style name="personal_item_text">
        <item name="android:textSize">@dimen/c_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/tab_title_normal_color</item>
        <item name="android:background">@null</item>
    </style>

    <style name="register_edit">
        <item name="android:textSize">@dimen/c_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="personal_detail_text" parent="baseStyle">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">@dimen/c_text_size</item>
        <item name="android:textColor">@color/black_text</item>
    </style>

    <style name="personal_detail_edit" parent="baseStyle">
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/tab_title_normal_color</item>
        <item name="android:textSize">@dimen/c_text_size</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="login_image_right" parent="baseStyle">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="dialog_loading" parent="@android:style/Theme.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 半透明 -->
        <item name="android:windowBackground">@color/translucent</item>
    </style>
    <!-- 头像选择框   弹出框 -->
    <style name="transparentFrameWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/photo_choose_bg</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="main_menu_animstyle">
        <item name="android:windowEnterAnimation">@anim/photo_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/photo_dialog_out_anim</item>
    </style>

    <style name="BaseDialog" parent="@android:style/Theme.Dialog" />

    <style name="Theme.Light.FullScreenDialogAct" parent="@style/BaseDialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

</resources>